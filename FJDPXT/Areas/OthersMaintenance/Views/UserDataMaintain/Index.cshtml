@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>飞机订票系统</title>
    <link href="~/Content/images/log.png" type="image/x-icon" rel="shortcut icon" />
    <!--bootstrap 框架样式表-->
    <link href="~/Content/bootstrap-4.1.3-dist/css/bootstrap.min.css" rel="stylesheet" />
    <!--模块"其他"部分的样式表-->
    <link href="~/Content/css/OthersMaintenance.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid pb-5">
        <h4 class="text-center py-3">查 询 用 户 组</h4>
        <div class="content py-3">
            <div class="card mt-5">
                <div class="card-block py-5 text-center">
                    <div>
                        <label>用 户 组 号：</label>
                        <input type="text" id="UserGroup" />
                    </div>
                    <p class="mt-4 text-primary"> 查询输入给定用户组号，或不输查询全部用户组</p>
                </div>
            </div>
            <div class="text-center mt-5">
                <button class="btn btn-outline-primary mr-4">重置</button>
                <button class="btn btn-outline-primary ml-4" onclick="SelectUserList()">查找</button>
            </div>
        </div>
    </div>
    <script src="~/Content/js/jquery-3.2.1.min.js"></script>
    <script src="~/Content/bootstrap-4.1.3-dist/js/bootstrap.min.js"></script>
    <script>
        function SelectUserList() {
            var userGroup = $("#UserGroup").val().trim();
            window.location.replace("@Url.Content("~/OthersMaintenance/UserDataMaintain/UserList?userGroup=")" + userGroup);
        }

       

    </script>
</body>
</html>